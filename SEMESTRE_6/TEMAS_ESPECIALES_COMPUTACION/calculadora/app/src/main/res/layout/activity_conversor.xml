<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConversorActivity">

    <LinearLayout
        android:id="@+id/containerMain"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        android:gravity="top"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:id="@+id/containerDolar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dolar"/>

            <EditText
                android:id="@+id/dolar"
                android:layout_width="fill_parent"
                android:layout_height="73dp"
                android:inputType="number"
                tools:ignore="LabelFor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerPeso"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/peso"/>

            <EditText
                android:id="@+id/pesos"
                android:layout_width="fill_parent"
                android:layout_height="73dp"
                android:inputType="number"
                tools:ignore="LabelFor" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerDolarToPeso"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/dolar2pesos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dolar2pesos" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/containerPesoToDolar"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:orientation="vertical"
            tools:ignore="DuplicateIds,MissingConstraints">

            <Button
                android:id="@+id/pesos2dolar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pesos2dolar" />

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>