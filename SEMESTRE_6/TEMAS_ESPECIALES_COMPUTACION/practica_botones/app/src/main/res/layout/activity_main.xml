<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="Ingrese el Monto de Compra" />

        <EditText
            android:id="@+id/montoCompra"
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:inputType="number"
            tools:ignore="LabelFor" />

        <Button
            android:id="@+id/calc_descuento"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Calular Descuento"
            android:onClick="calcular_descuento"/>

        <TextView
            android:id="@+id/montoC"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/descuento"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/costoNeto"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/impuesto"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/importeNeto"
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:text="TextView" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>